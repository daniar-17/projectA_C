@foreach (CostResultList result in results)
{
    if (result.Costs.Count > 0)
    {
        for (int i = 0; i < result.Costs.Count; i++)
        {
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <img src=@Url.Content("~/Content/images/" + result.Code + ".png") class="" alt="...">
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label class="text-secondary font-weight-normal">Agen Pengiriman</label><br />
                                <span class="text-black" id="detail">@result.Name</span>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <label class="text-secondary font-weight-normal">Jenis Layanan</label><br />
                                <span class="text-black" id="detail">@result.Costs[i].Description</span>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <label class="text-secondary font-weight-normal">Estimasi Waktu</label><br />
                                <span class="text-black" id="detail">@result.Costs[i].Cost[0].Etd.ToLower().Replace("hari", "") hari</span>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <label class="text-secondary font-weight-normal">Tarif</label><br />
                                <span class="font-weight-bold text-success" id="detail">Rp. @result.Costs[i].Cost[0].Value</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}

